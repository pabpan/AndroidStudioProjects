<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/opinion"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="89dp"
        android:text="@string/opinion" />

    <Button
        android:id="@+id/mostrar_boton_mascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opinion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="217dp"
        android:text="@string/mostrar_boton_mascota"
        app:backgroundTint="@color/azul" />

    <TextView
        android:id="@+id/autores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mostrar_boton_mascota"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:gravity="center_horizontal"
        android:text="@string/autores"
        android:textAlignment="center" />
</RelativeLayout>