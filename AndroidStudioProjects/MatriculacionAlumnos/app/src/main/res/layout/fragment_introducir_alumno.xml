<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Titulo_fragment_alumno"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#FFFFBB33"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:scaleType="center"
        android:text="Introduce un alumno"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editext_fragment_alumno_dni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/editext_alumno_dni" />

    <EditText
        android:id="@+id/editext_fragment_alumno_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:hint="@string/editext_alumno_nombre" />

    <EditText
        android:id="@+id/editext_fragment_alumno_apellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:hint="@string/editext_alumno_apellidos" />
</LinearLayout>