<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:alpha="0.8"
        android:background="@color/cardview_shadow_start_color"
        android:padding="16dp"
        android:paddingTop="1dp">

        <TextView
            android:id="@+id/textview_item_relacion_codigo_asignatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:text="C" />

        <TextView
            android:id="@+id/textview_item_relacion_nombre_asignatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/textview_item_relacion_codigo_asignatura"
            app:layout_constraintTop_toTopOf="@+id/textview_item_relacion_codigo_asignatura"
            tools:ignore="MissingConstraints"
            tools:text="@string/textview_item_asignatura_nombre_asignatura" />

        <ImageView
            android:id="@+id/boton_borrar_relacion_asignatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttonTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview_item_relacion_nombre_asignatura"
            app:layout_constraintTop_toTopOf="@+id/textview_item_relacion_nombre_asignatura"
            app:srcCompat="@drawable/ic_baseline_delete_24"
            tools:ignore="MissingConstraints,VectorDrawableCompat" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>